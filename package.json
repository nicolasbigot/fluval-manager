{
  "name": "fluval-manager",
  "version": "1.0.0",
  "description": "Web interface for my Fluval Edge",
  "main": "fluval-manager",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicolasbigot/fluval-manager.git"
  },
  "scripts": {
    "build": "parallelshell 'npm run build:sources'",
    "build:sources": "tsc",
    "watch": "parallelshell 'npm run watch:sources'",
    "watch:sources": "tsc -w",
    "start": "npm run start:prod",
    "start:dev": "nodemon dist/www.js",
    "start:prod": "node dist/www.js",
    "clean": "npm run clean:build && npm run clean:tmp",
    "clean:build": "rm -rf dist",
    "clean:tmp": "find . -name '*~' -delete"
  },
  "author": "Nicolas Bigot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nicolasbigot/fluval-manager/issues"
  },
  "homepage": "https://github.com/nicolasbigot/fluval-manager#readme",
  "dependencies": {
    "body-parser": "^1.16.0",
    "express": "^4.14.0",
    "morgan": "^1.7.0",
    "pug": "^2.0.0-beta11"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/express": "^4.0.35",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.4",
    "@types/pug": "^2.0.4",
    "nodemon": "^1.11.0",
    "parallelshell": "^2.0.0",
    "typescript": "^2.1.5"
  }
}
